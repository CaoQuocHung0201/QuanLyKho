<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btnQLKho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="300dp"
        android:background="#C83D3D"
        android:text="Quản lý kho"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btnChonXuat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnChonNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="172dp"
        android:background="#C83D3D"
        android:text="Nhập"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnChonXuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="172dp"
        android:background="#C83D3D"
        android:text="Xuất"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btnChonNhap"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnQLTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="172dp"
        android:background="#C83D3D"
        android:text="Quản lý TK"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btnChonXuat"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>