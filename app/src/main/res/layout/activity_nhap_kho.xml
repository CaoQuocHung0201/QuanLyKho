<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.NhapKho">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/barCode_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="barcode"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/idNhanvien_nhap"
                app:layout_constraintStart_toStartOf="@+id/idNhanvien_nhap"
                app:layout_constraintTop_toBottomOf="@+id/idNhanvien_nhap" />

            <EditText
                android:id="@+id/edtGia_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:ems="10"
                android:hint="Nhập giá"
                android:inputType="text"
                android:padding="5dp"
                android:phoneNumber="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/edtTenSp_nhap"
                app:layout_constraintStart_toStartOf="@+id/edtTenSp_nhap"
                app:layout_constraintTop_toBottomOf="@+id/edtTenSp_nhap" />

            <EditText
                android:id="@+id/edtSoluong_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:ems="10"
                android:hint="Nhập số lượng"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/edtGia_nhap"
                app:layout_constraintHorizontal_bias="0.991"
                app:layout_constraintStart_toStartOf="@+id/edtGia_nhap"
                app:layout_constraintTop_toBottomOf="@+id/edtGia_nhap" />

            <TextView
                android:id="@+id/thoiGian_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Thời gian"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/barCode_nhap"
                app:layout_constraintStart_toStartOf="@+id/barCode_nhap"
                app:layout_constraintTop_toBottomOf="@+id/barCode_nhap" />

            <EditText
                android:id="@+id/edtTenSp_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:ems="10"
                android:hint="Nhập tên"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/thoiGian_nhap"
                app:layout_constraintStart_toStartOf="@+id/thoiGian_nhap"
                app:layout_constraintTop_toBottomOf="@+id/thoiGian_nhap" />

            <Spinner
                android:id="@+id/danhMuc_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rouded_corner"
                android:padding="0dp"
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/edtSoluong_nhap"
                app:layout_constraintTop_toBottomOf="@+id/edtSoluong_nhap" />

            <EditText
                android:id="@+id/edtHSD_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:ems="10"
                android:hint="Nhập HSD"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/edtSoluong_nhap"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/edtSoluong_nhap"
                app:layout_constraintTop_toBottomOf="@+id/danhMuc_nhap" />

            <TextView
                android:id="@+id/btnChupanh_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:backgroundTint="#0078e6"
                android:padding="6dp"
                android:text="CHỤP ẢNH"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/edtXuatxu_nhap"
                app:layout_constraintStart_toStartOf="@+id/edtXuatxu_nhap"
                app:layout_constraintTop_toBottomOf="@+id/edtXuatxu_nhap" />

            <EditText
                android:id="@+id/edtThuonghieu_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:ems="10"
                android:hint="Nhập thương hiệu"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/edtHSD_nhap"
                app:layout_constraintStart_toStartOf="@+id/edtHSD_nhap"
                app:layout_constraintTop_toBottomOf="@+id/edtHSD_nhap" />

            <EditText
                android:id="@+id/edtXuatxu_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:ems="10"
                android:hint="Nhập xuất xứ"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/edtThuonghieu_nhap"
                app:layout_constraintStart_toStartOf="@+id/edtThuonghieu_nhap"
                app:layout_constraintTop_toBottomOf="@+id/edtThuonghieu_nhap" />

            <TextView
                android:id="@+id/btnNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rouded_corner"
                android:backgroundTint="#0078e6"
                android:padding="6dp"
                android:text="NHẬP HÀNG"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/listAnh"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/listAnh"
                app:layout_constraintTop_toBottomOf="@+id/listAnh"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listAnh"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/rouded_corner"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnChupanh_nhap" />

            <TextView
                android:id="@+id/idNhanvien_nhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:text="ID nhân viên"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="NHẬP KHO"
                android:textColor="#0078e6"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/idNhanvien_nhap"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btnQuaylai_nhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouded_corner"
                android:backgroundTint="#FB0000"
                android:padding="3dp"
                android:text="QUAY LẠI"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/idNhanvien_nhap"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_menu_add"
                app:layout_constraintBottom_toBottomOf="@+id/danhMuc_nhap"
                app:layout_constraintEnd_toEndOf="@+id/edtSoluong_nhap"
                app:layout_constraintTop_toTopOf="@+id/danhMuc_nhap" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>