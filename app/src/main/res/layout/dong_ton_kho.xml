<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/tenSP_dongtonkho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rouded_corner"
        android:hint="Tên"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/soLuong_dongtonkho"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TenSP_dongtonkho" />

    <EditText
        android:id="@+id/soLuong_dongtonkho"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rouded_corner"
        android:hint="Số lượng"
        android:inputType="text"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tenSP_dongtonkho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TenSP_dongtonkho" />

    <EditText
        android:id="@+id/TenSP_dongtonkho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rouded_corner"
        android:hint="Ngày nhập"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/soLuong_dongtonkho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>